<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js")
</head>
<body>  
    <div class="navBar">
    <div class="nav-bg">
        <ul class="nav">
            <li>@Html.ActionLink("Home", "Index", "Home") &nbsp;</li>
            <li>@Html.ActionLink("Projects", "projects", "Home") &nbsp;</li>
            <li><a onclick="openForm()">Contact</a> &nbsp;</li>
        </ul>
    </div>
    </div>
    <img src="~/wwwroot/images/background.jpg" class="position-fixed bg-image" alt="ring dash" id="BackgroundImage">
    <div class="body-content">
        <div onclick="closeForm()">
           @RenderBody()
        </div>
            <button onclick="openForm()" class="Pop_Up_Button">CONTACT</button>
            <div id="ContactForm">@{Html.RenderAction("_ContactForm", "Home");}</div>
            <hr />
            <footer class="footer">
                <p>&copy; @DateTime.Now.Year - Blaine Wolz</p>
            </footer>
        
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/Scripts/Site.js")
        @RenderSection("scripts", required: false)
</body>
</html>
